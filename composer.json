{
    "name": "julioccorreia/reverb-hooks",
    "description": "Fluent event hooks for Laravel Reverb.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "websocket",
        "websockets",
        "reverb",
        "real-time",
        "event",
        "events",
        "hook",
        "hooks"
    ],
    "authors": [
        {
            "name": "Julio CÃ©sar Correia Gazige",
            "email": "juliocgazige@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/reverb": "^1.0",
        "illuminate/support": "^10.47|^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.11",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JulioCCorreia\\ReverbHooks\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JulioCCorreia\\ReverbHooks\\ReverbHooksServiceProvider"
            ],
            "aliases": {
                "ReverbHooks": "JulioCCorreia\\ReverbHooks\\Facades\\ReverbHooks"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "rector": "vendor/bin/rector process",
        "pint": "@php ./vendor/bin/pint --config=./pint.json",
        "lint": [
            "@rector",
            "@pint"
        ],
        "phpstan": "vendor/bin/phpstan analyze src --memory-limit=-1",
        "test": "vendor/bin/pest"
    }
}
