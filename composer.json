{
    "name": "julioccorreia/reverb-hooks",
    "description": "Fluent event hooks for Laravel Reverb.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "websocket",
        "websockets",
        "reverb",
        "real-time",
        "event",
        "events",
        "hook",
        "hooks"
    ],
    "authors": [
        {
            "name": "Julio CÃ©sar Correia Gazige",
            "email": "juliocgazige@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/reverb": "^1.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "enlightn/security-checker": "^2.0",
        "larastan/larastan": "^2.11",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JulioCCorreia\\ReverbHooks\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JulioCCorreia\\ReverbHooks\\ReverbHooksServiceProvider"
            ],
            "aliases": {
                "ReverbHooks": "JulioCCorreia\\ReverbHooks\\Facades\\ReverbHooks"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "rector": "vendor/bin/rector process",
        "pint": "@php ./vendor/bin/pint --config=./pint.json",
        "format": [
            "@rector",
            "@pint"
        ],
        "analyze": "vendor/bin/phpstan analyze src --memory-limit=-1",
        "test:unit": "pest --test-directory=tests/Unit --parallel",
        "test:feature": "pest --test-directory=tests/Feature --parallel",
        "test:coverage": "pest --parallel --coverage --min=100 --colors=always",
        "test:detailed-coverage": "pest --parallel --coverage --min=100 --coverage-html=.coverage",
        "test:types": "@analyze",
        "test:lint": "pint --test --config=./pint.json",
        "test:mutate": [
            "Composer\\Config::disableProcessTimeout",
            "pest --mutate --everything --covered-only --parallel --min=90"
        ],
        "test": [
            "@test:lint",
            "@test:types",
            "@test:coverage"
        ],
        "security": "vendor/bin/security-checker security:check ./composer.lock"
    }
}